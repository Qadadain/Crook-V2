{% extends 'base.html.twig' %}

{% block title %}Mot de passe oubli√©{% endblock %}

{% block body %}
    <div>
        {% for message in app.flashes('danger') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}
    </div>
    {{ form_start(form) }}
    <div class="mdl-grid">
    <div class="mdl-cell mdl-cell--4-col d-flex flex-direction-column mdl-cell--4-offset">
        <div>
            <h3>New Password()</h3>
        </div>
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label max-width mt-5">
            {{ form_widget(form.email) }}
            {{ form_label(form.email) }}
        </div>
        <div class="d-flex justify-content-center mt-2">
            <button class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored">Reset</button>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}