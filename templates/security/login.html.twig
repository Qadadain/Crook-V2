{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="mdl-grid">
        <div class="mdl-cell mdl-cell--4-col"></div>
        <div class="mdl-cell content-column mdl-cell--4-col">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}
                <div>
                    <h3 class="h3 mb-3 font-weight-normal">Connexion</h3>
                </div>
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <input class="mdl-textfield__input form-control" type="email" value="{{ last_username }}" name="email"
                           id="inputEmail" required>
                    <label class="mdl-textfield__label" for="inputEmail">Email </label>
                </div>
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <input type="password" name="password" id="inputPassword" class="form-control mdl-textfield__input"
                           required>
                    <label class="mdl-textfield__label" for="inputPassword">Mot de passe</label>
                </div>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
                #}
                <p>Vous n'avez pas encore de compte ? <a href="{{ path('app_register') }}">Inscrivez vous !</a></p>
                <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored"
                        type="submit">
                    Se connecter
                </button>
            </form>
        </div>
        <div class="mdl-cell mdl-cell--4-col"></div>
    </div>
{% endblock %}
