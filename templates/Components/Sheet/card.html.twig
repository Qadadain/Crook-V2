{% for sheet in sheets %}
        <div class="mdl-cell mdl-cell--4-col card-container">
            <a class="a-cards" href="{{ path('sheet_show', {'slug': sheet.slug }) }}">
                <div class="card">
                    <div class="content">
                        <img class="card-image" src="{{ asset('/images/language/') }}{{ sheet.language.image }}" alt="">
                        {% if app.user %}
                            <span>
                                <i class="material-icons favorite {{ app.user.favorite.contains(sheet)  ? 'favorite-full' : '' }}"
                                   data-id="{{ sheet.id }}">
                                    {{ app.user.favorite.contains(sheet)  ? 'favorite' : 'favorite_border' }}
                                </i>
                            </span>
                        {% endif %}
                        <h6>{{ sheet.title }}</h6>
                        <div class="hover_content">
                            <div>
                                <p>{{ sheet.description }}</p>
                            </div>
                            <div class="author">
                                <div>
                                    <p>par {{ sheet.author.pseudo }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
{% endfor %}
