{% for tutorial in tutorials %}
    <section class="mdl-cell--6-col mb-5">
        <div class="demo-card-wide mdl-card mdl-shadow--2dp card-tuto">
            <div class="mdl-card__title">
                <h2 class="mdl-card__title-text">{{ tutorial.title | slice(0,40) }} ...</h2>
            </div>
            <div class="mdl-card__supporting-text">
                {{ tutorial.description }}
            </div>
            <div class="mdl-card__actions mdl-card--border action">
                <a href="{{ path('tutorial_show', {'language': tutorial.language.slug, 'slug': tutorial.slug }) }}"
                   class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
                    Voir le tuto
                </a>
            </div>
            <div class="mdl-card__menu">
                {% if app.user is same as(tutorial.author) and app.request.attributes.get('_route') is same as('profile_my_tutorial') %}
                    <a class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect"
                       href="{{ path('tutorial_edit', {'id': tutorial.id}) }}">
                        <i class="material-icons">
                            edit
                        </i>
                    </a>
                {% endif %}
            </div>
        </div>
    </section>
{% endfor %}

