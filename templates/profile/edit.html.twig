{% extends 'base.html.twig' %}
{% block title %}
    Crook - Edition du profil
{% endblock %}
{% block body %}
    {{ form_start(form) }}
    <div class="mdl-grid">
        <div class="mdl-cell mdl-cell--4-col d-flex flex-direction-column mdl-cell--4-offset">
            <div>
                <h1>Set profil()</h1>
            </div>
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label max-width">
                {{ form_widget(form.pseudo) }}
                {{ form_label(form.pseudo) }}
            </div>
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label max-width">
                {{ form_widget(form.email) }}
                {{ form_label(form.email) }}
            </div>
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label max-width">
                {{ form_widget(form.avatar) }}
                {{ form_label(form.avatar) }}
            </div>
            <div>
                <p><a href="{{ path('app_forgotten_password') }}">Reset du Mot de passe !</a></p>
            </div>
            <div class="d-flex justify-content-center">
                <button class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored">{{ button_label|default('Persist') }}</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
