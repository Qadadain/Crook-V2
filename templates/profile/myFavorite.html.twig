{% extends 'base.html.twig' %}

{% block title %}$user->getFavorite(){% endblock %}

{% block body %}
    <div class="container mdl-grid">
        {% if sheets is not empty %}
            <section>
                <h1 class="text-align-center">->getFavorite()</h1>
                <div class="mdl-grid justify-content-center">
                    <h4 class="mdl-cell mdl-cell--12-col text-align-center mb-4">Tous mes favoris</h4>
                    {% include 'Components/Sheet/card.html.twig' %}
                </div>
            </section>
        {% else %}
            <h2 class="mdl-cell mdl-cell--12-col text-align-center">Vous n'avez pas encore de Favoris</h2>
            <h4 class="mdl-cell mdl-cell--12-col text-align-center">N'hésitez pas à cliquer sur le coeur !</h4>
        {% endif %}
    </div>
{% endblock %}
